---
import { Container, FeatureCard } from '@odyssey-theme/components';
import Layout from '../layouts/Page.astro';
import HomeHeroSection from '../components/sections/heros/HomeHeroSection.astro';
---

<Layout>
	<HomeHeroSection />
	<Container>
		<section class="feature-card__section">
			<h2>Recent Articles</h2>
			<p>
				Here's what I've been working on lately.
			</p>
			<div class="feature-card__grid">
				<FeatureCard
					href="/blog/contributing-to-the-cncf-cookbook"
					imgSrc="/assets/images/home/screenshots/landing-3.jpg"
					title="CNCF Cookbook Contribution"
				/>

			</div>
		</section>
	</Container>
</Layout>

<style>
	.feature-card__section {
		margin: var(--section-margin) auto;
	}
	.feature-card__grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: var(--theme-grid-gap);
	}
	@media (max-width: 768px) {
		.feature-card__grid {
			grid-template-columns: 1fr;
		}
	}
</style>
